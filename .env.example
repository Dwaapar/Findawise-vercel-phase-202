# ================================
# FINDAWISE EMPIRE - LOCAL CONFIGURATION
# Copy this file to .env and fill in your values
# ================================

# ================================
# DATABASE (Local PostgreSQL)
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=findawise_empire
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/findawise_empire

# ================================
# AI BRAIN CONFIGURATION
# ================================

# Local AI (Ollama - recommended)
LOCAL_AI_ENABLED=true
LOCAL_AI_URL=http://localhost:11434
LOCAL_AI_CHAT_MODEL=llama2
LOCAL_AI_EMBEDDINGS_MODEL=nomic-embed-text
LOCAL_AI_CODE_MODEL=codellama

# External AI APIs (Optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Vector Database
VECTOR_DB_ENABLED=true
VECTOR_DB_URL=http://localhost:8000
VECTOR_DB_PROVIDER=chroma

# ================================
# PAYMENT PROCESSING
# ================================

# Stripe (Primary payment processor)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (Alternative payment)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ================================
# AFFILIATE NETWORKS
# ================================

# ShareASale
SHAREASALE_API_KEY=your_shareasale_api_key
SHAREASALE_SECRET_KEY=your_shareasale_secret_key
SHAREASALE_AFFILIATE_ID=your_affiliate_id

# Commission Junction (CJ Affiliate)
CJ_API_KEY=your_cj_api_key
CJ_WEBSITE_ID=your_website_id

# ClickBank
CLICKBANK_API_KEY=your_clickbank_api_key
CLICKBANK_DEVELOPER_KEY=your_developer_key
CLICKBANK_CLERK_KEY=your_clerk_key

# Amazon Associates
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_associate_tag
AMAZON_REGION=US

# ================================
# EMAIL & COMMUNICATION
# ================================

# Email provider (choose one: sendgrid, resend, smtp)
EMAIL_PROVIDER=sendgrid
FROM_EMAIL=no-reply@yourdomain.com

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Resend
RESEND_API_KEY=your_resend_api_key

# SMTP (if using custom email server)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_SECURE=true

# Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# ================================
# SOCIAL MEDIA AUTOMATION
# ================================

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id

# ================================
# SECURITY & SESSIONS
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production
NODE_ENV=development

# CORS
FRONTEND_URL=http://localhost:3000

# ================================
# PERFORMANCE & CACHING
# ================================

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Content scraping
SCRAPING_ENABLED=true

# Logging
LOG_LEVEL=info

# ================================
# SERVER CONFIGURATION
# ================================
PORT=5000
HOST=0.0.0.0

# ================================
# OPTIONAL SERVICES
# ================================

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
MIXPANEL_TOKEN=your_mixpanel_token

# File storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# CDN
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id